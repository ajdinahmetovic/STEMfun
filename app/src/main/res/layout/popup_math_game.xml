<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="#00ffffff"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_popup"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_gravity="center"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:text="How to play MathGame"
            android:fontFamily="@font/bold"
            android:textColor="#010b19"
            android:textSize="26dp"/>

        <ImageView
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_phone_tilt"
            />


        <TextView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="Tilt yout phone left and right to move alien"
            android:textAlignment="center"
            android:fontFamily="@font/bold"
            android:textColor="#010b19"
            android:textSize="20dp"/>




        <ImageView

            android:layout_marginTop="10dp"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_numbers"
            />

        <TextView
            android:layout_width="260dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:text="Collect numbers to get points"
            android:fontFamily="@font/bold"
            android:textColor="#010b19"
            android:textSize="20dp"/>



        <ImageView
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_letters"
            />

        <TextView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Avoid letters to avoid losing points"
            android:fontFamily="@font/bold"
            android:textColor="#010b19"
            android:textSize="20dp"/>




        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />


        <View
            android:layout_width="10dp"
            android:layout_height="30dp" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/shape_button_popup"
            android:fontFamily="@font/bold"
            android:padding="10dp"
            android:text="Play Game!"
            android:textColor="#010B19"
            android:textSize="30sp" />

    </LinearLayout>


</LinearLayout>